<% @skip_footer = true %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-sign">
      <h2 class= "text-center">Write a message</h2>

        <%= simple_form_for @reponse, url: product_message_reponses_path, method: :post do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
         <%= f.input :texte, :label => "-" %>

        </div>



        <div class="form-actions text-center">
          <%= f.button :submit, "Send", :class => 'btn-white btn-colored' %>


        </div>
      <% end %>
    </div>
  </div>
</div>








