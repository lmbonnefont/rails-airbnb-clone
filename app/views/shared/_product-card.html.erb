<div class="container">
  <div class="row">
  <% @products_top_3.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card card-btn">
        <div class="card-top">
          <div class="card-category">"@product.categrory"</div>
          <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
        </div>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
        </div>
        <div class="card-description">
          <h2>"@product.name" </h2>
          <p><%= product.description %></p>
          <h3><%= product.price %> €</h3>
        </div>
        <div class="card-bottom">
          <p><%= product.user %></p>
        </div>
      <a class="card-link" href="#" ></a>
      </div>
    </div>
    <% end %>
  </div>

  <div class="row">
