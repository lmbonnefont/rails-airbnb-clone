<div class="backgroud-img" style="background-image: url(<%= asset_path "new_product_background.jpg" %>);">

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-new">
          <h2>Add a product</h2>
          <%= simple_form_for [@user, @product] do |f| %>
            <%= f.input :title %>
            <%= f.input :price %>
            <%= f.input :quick_description %>
            <%= f.input :description %>


            <!-- ajout photo uploader -->
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.submit "Add a product", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

</div>
