<% @skip_footer = true %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 form-sign">
      <h2 class= "text-center">Add a product</h2>

        <%= simple_form_for [@user, @product] do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :price %>
          <%= f.input :quick_description %>
          <%= f.input :description %>
        </div>

        <div class="form-inputs">
        <!-- ajout photo uploader -->
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Add a product", :class => 'btn-white btn-colored' %>


        </div>
      <% end %>
    </div>
  </div>
</div>

